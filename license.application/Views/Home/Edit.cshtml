@model license.application.Models.MachineViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin-bottom: 20px;" class="border-bottom">
    <h5 class="display-4 text-primary"><b style="font-size: 25px;">Edit/Create Customer</b></h5>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Machine.Id" class="form-control" hidden />
            <div class="form-group">
                <label asp-for="Machine.Name" class="control-label"></label>
                <input asp-for="Machine.Name" class="form-control" />
                <span asp-validation-for="Machine.Name" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 10px;">
                <label asp-for="Machine.UniqueId" class="control-label"></label>
                <input asp-for="Machine.UniqueId" class="form-control" />
                <span asp-validation-for="Machine.UniqueId" class="text-danger"></span>
            </div>
            <div class="form-group form-check" style="margin-top: 10px;" hidden>
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Machine.Active" /> @Html.DisplayNameFor(model => model.Machine.Active)
                </label>
            </div>
            <div class="form-group" style="margin-top: 10px;">
                <label asp-for="Machine.LicenseId" class="control-label"></label>
                <select asp-for="Machine.LicenseId" class="form-control"
                        asp-items="@(new SelectList(Model.Licenses, nameof(License.Id), nameof(License.Key)))">
                    <option>Please select one</option>
                </select>
            </div>
            <div class="form-group" style="margin-top: 10px;">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="margin-top: 10px;">
    <a asp-action="Index">Back to List</a>
</div>

